<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_taocan_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_hight"

        android:background="@color/item_bg" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_yewu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mar_left_20"
                android:text="拍照取证"
                android:textColor="@color/item_text_color"
                android:textSize="@dimen/text_item" />
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_pai"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="@dimen/mar_left_20"
                android:text=""
                android:textColor="@color/item_text_color"
                android:textSize="@dimen/text_item"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_liang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_marginRight"
            android:textColor="@color/item_text_color"
            android:textSize="@dimen/text_item"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/activity_bg" />
    </LinearLayout>
</LinearLayout>
