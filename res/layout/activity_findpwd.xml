<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical" >
    <include layout="@layout/top_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_height"
        android:layout_marginTop="@dimen/button_margiontop_10"
        android:background="@color/item_bg" >
        <TextView
            android:id="@+id/tv_zhanghao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="账号"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/text_item"
            android:textColor="@color/item_text_color"
            />
        <EditText
            android:id="@+id/et_account"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/tv_zhanghao"
            android:layout_marginLeft="@dimen/mar_left_20"
            android:layout_centerVertical="true"
            android:phoneNumber="true"
            android:background="@null"
            android:hint="请输入手机号"
            android:textSize="@dimen/text_item"
            />

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" >
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity=""
        android:background="@color/white">
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/gry"
            android:layout_height="1dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_height"
        android:background="@color/item_bg"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_yanzhengma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="验证码"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/text_item"
            android:textColor="@color/item_text_color"
            />
        <EditText
            android:id="@+id/et_cercode"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_yanzhengma"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/layout_marginLeft"
            android:background="@null"
            android:hint="请输入验证码"
            android:textSize="@dimen/text_item" />

        <Button
            android:id="@+id/btn_send_code"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/round_corner_bg"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/text_12" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_next"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/button_marginTop"
        android:background="@drawable/round_corner_white"
        android:text="下一步"
        android:textColor="@color/huise"
        android:textSize="@dimen/button_text_size" />
</LinearLayout>