<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg">
<include layout="@layout/top_title"/>


    <RelativeLayout
        android:id="@+id/rl_amend_psd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_hight"
        android:background="@color/item_bg" >
<!--
        <ImageView
            android:id="@+id/message"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_marginLeft"
            android:src="@drawable/xgmm" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_marginLeft"
            android:text="修改密码"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_item" />

        <ImageView
            android:id="@+id/iv_next_xiugaimima"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_marginRight"
            android:src="@drawable/sanjiao" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_hight"
        android:layout_marginTop="@dimen/button_margiontop_10"
        android:background="@color/item_bg" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_marginLeft"
            android:text="仅在WiFi下保全/下载"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_item" />

        <CheckBox
            android:id="@+id/cb_iswifi"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_marginRight"
            android:background="@drawable/button_iswifi"
            android:button="@null"
            android:textSize="@dimen/text_size"
           />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity=""
        android:background="@color/white">
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/gry"
            android:layout_height="1dp" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_about_us"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_hight"
        android:background="@color/item_bg" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_marginLeft"
            android:text="关于我们"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_item" />


        <ImageView
            android:id="@+id/iv_next_aboutus"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_marginRight"
            android:src="@drawable/sanjiao" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_clearCache"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_hight"
        android:layout_marginTop="@dimen/button_margiontop_10"
        android:background="@color/item_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="清除缓存"
            android:layout_marginLeft="@dimen/layout_marginLeft"
            android:textSize="@dimen/text_item"
            android:textColor="@color/item_text_color"/>

        <TextView
            android:id="@+id/tv_cache_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="123KB"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/layout_marginLeft"
            android:textSize="@dimen/text_item"
            android:textColor="@color/item_text_color"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_hight"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_corner_white"
        android:text="退出登录"
        android:textSize="@dimen/text_item"
        android:textColor="@color/jiuhong"
        />

</LinearLayout>