<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.truthso.ip360.activity.MainActivity" >

    <FrameLayout
        android:id="@+id/main_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@color/activity_bg" >
    </FrameLayout>

    <RadioGroup
        android:id="@+id/main_RadioGroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:background="@color/ghostwhite"
        android:orientation="horizontal" >

        <!-- android:background="@drawable/home_selector" -->

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/home_selector"
            android:text="现在取证"
            android:gravity="center"
            android:textSize="12sp"
             />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/cloudevidence_selector"
            android:text="证据列表"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/huise"
             />

    <!--    <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
             android:background="@drawable/native_selector"
            android:gravity="center"
            />-->

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/translist_selector"
            android:text="传输列表"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/huise"
            />

        <RadioButton
            android:id="@+id/rb_pc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/personcenter_selector"
            android:text="个人中心"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/huise"
            />
    </RadioGroup>

</LinearLayout>