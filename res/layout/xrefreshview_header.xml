<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/xrefreshview_header_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white" >

    <RelativeLayout
        android:id="@+id/xrefreshview_header_text"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_horizontal"
         >
        <RelativeLayout
            android:id="@+id/left_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/xrefreshview_header_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/a6" />
             <ImageView
                android:id="@+id/xrefreshview_header_arrow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@anim/refresh_animation" />
        </RelativeLayout>

        <TextView
            android:id="@+id/xrefreshview_header_hint_textview"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/left_images"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            android:text="@string/xrefreshview_header_hint_refreshing" />

    </RelativeLayout>

</RelativeLayout>